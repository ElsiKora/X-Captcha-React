{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"jsx": "react-jsx",
		"lib": ["es2020", "DOM"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext"
	},
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "dist", ".storybook/**/*"],
	"include": ["src/**/*"]
}
