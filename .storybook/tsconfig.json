{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "..",
		"jsx": "react-jsx",
		"lib": ["es2020", "DOM"],
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"paths": {
			"*": ["*"]
		},
		"resolveJsonModule": true,
		"rootDir": "..",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "dist"],
	"extends": "../tsconfig.json",
	"include": ["./**/*", "../src/**/*"]
}
