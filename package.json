{
	"name": "@elsikora/x-captcha-react",
	"version": "2.0.2-dev.1",
	"description": "React components for X-Captcha service",
	"keywords": [
		"captcha",
		"security",
		"react"
	],
	"license": "MIT",
	"author": "ElsiKora",
	"type": "module",
	"exports": {
		".": {
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js"
		},
		"./styles": {
			"require": "./dist/cjs/styles.css",
			"import": "./dist/esm/styles.css",
			"default": "./dist/esm/styles.css"
		}
	},
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "rollup -c",
		"build:storybook": "storybook build",
		"clean": "rimraf dist",
		"commit": "cz",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"lint": "eslint ./",
		"lint:all": "npm run lint && npm run lint:types",
		"lint:all:fix": "npm run lint:fix && npm run lint:types:fix",
		"lint:fix": "eslint --fix ./",
		"lint:style": "stylelint \"**/*.{css,scss}\"",
		"lint:style:fix": "stylelint \"**/*.{css,scss}\" --fix",
		"lint:types": "tsc --noEmit",
		"lint:types:fix": "tsc --noEmit --skipLibCheck",
		"prepare": "husky",
		"release": "semantic-release",
		"storybook": "storybook dev -p 6006",
		"test": "jest",
		"typecheck": "tsc --noEmit"
	},
	"config": {
		"commitizen": {
			"path": "@elsikora/commitizen-plugin-commitlint-ai"
		}
	},
	"eslintConfig": {
		"extends": [
			"plugin:storybook/recommended"
		]
	},
	"dependencies": {
		"@elsikora/x-captcha-client": "^1.0.6"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@elsikora/commitizen-plugin-commitlint-ai": "^2.0.1",
		"@elsikora/eslint-config": "^3.10.0",
		"@elsikora/eslint-plugin-css": "^0.6.3",
		"@eslint-react/eslint-plugin": "^1.52.3",
		"@rollup/plugin-typescript": "^12.1.4",
		"@saithodev/semantic-release-backmerge": "^4.0.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.3",
		"@semantic-release/npm": "^12.0.2",
		"@semantic-release/release-notes-generator": "^14.0.3",
		"@storybook/addon-a11y": "^9.1.1",
		"@storybook/addon-onboarding": "^9.1.1",
		"@storybook/react": "^9.1.1",
		"@storybook/react-vite": "^9.1.1",
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"commitizen": "^4.3.1",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"eslint": "^9.33.0",
		"eslint-plugin-i18next": "^6.1.3",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-n": "^17.21.3",
		"eslint-plugin-no-secrets": "^2.2.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-storybook": "^9.1.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"rollup": "^4.46.2",
		"rollup-plugin-generate-package-json": "^3.2.0",
		"rollup-plugin-postcss": "^4.0.2",
		"semantic-release": "^24.2.7",
		"storybook": "^9.1.1",
		"stylelint": "^16.23.1",
		"stylelint-config-css-modules": "^4.5.1",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-standard-scss": "^15.0.1",
		"stylelint-order": "^7.0.0",
		"stylelint-prettier": "^5.0.3",
		"typescript": "^5.9.2"
	},
	"peerDependencies": {
		"react": "^17.0.0 || ^18.0.0 || ^19.0.0",
		"react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
